extends layout
block content
     h1 #{title}
     br

     form(action="/completetask", method="post")
      table.table.table-striped.table-bordered
         tr
           td Name
           td Message
           td errorCode
           td url
           td application
           td Date
           td Complete
         if (typeof tasks === "undefined")
           tr
             td
         else
           each task in tasks
             tr
               td #{task.name}
               td #{task.message}
               td #{task.errorCode}
               td #{task.url}
               td #{task.application}
               - var date  = new Date(task.date);
               - var day   = date.getDate();
               - var month = date.getMonth() + 1;
               - var year  = date.getFullYear();
               td #{month + "/" + day + "/" + year}
               td
                if(task.completed) 
                 input(type="checkbox", name="#{task.id}", value="#{!task.completed}", checked=task.completed)
                else
                 input(type="checkbox", name="#{task.id}", value="#{!task.completed}", checked=task.completed)
       button.btn.btn-primary(type="submit") Update tickets
     hr
     form.well(action="/addtask", method="post")

      table.table.table-striped.table-bordered
       label Item Name:
       input(name="name", type="textbox")
       label Item Message:
       input(name="message", type="textbox")
       label Item Error Code:
       input(name="errorCode", type="textbox")
       label Item URL:
       input(name="url", type="textbox")
       label Item Application:
       input(name="application", type="textbox")
       br
       br
       button.btn(type="submit") Add item